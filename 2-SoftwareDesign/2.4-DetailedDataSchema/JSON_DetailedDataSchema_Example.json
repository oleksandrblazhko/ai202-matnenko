{
  "description": "Опис предметної області ПП",
  "type": "object",
  "properties": {
    "comp_list": {
      "description": "Список композицій",
      "type": "object",
      "properties": {
        "genre": {
          "description": "Жанр",
          "type": "string",
              "maxLength": 32
        },
        "comp_info": {
          "description": "Інформація про композицію",
          "type": "object",
          "properties": {
            "name": {
              "description": "Назва",
              "type": "string",
                  "maxLength": 64
            },
            "author": {
              "description": "Автор",
              "type": "string",
                  "maxLength": 128
            },
            "info": {
              "description": "Докладний опис",
              "type": "string",
                  "maxLength": 512
            },
            "rate": {
              "description": "Рейтинг",
              "type": "number",
                   "minLength": 0,
                   "maxLength": 5
            },
            "words": {
              "description": "Слова",
              "type": "string",
                  "maxLength": 1024
            },
            "notes": {
              "description": "Ноти",
              "type": "string",
                  "maxLength": 1024
            }
          },
          "required": ["name", "author", "info", "rate", "words", "notes"]
        },
      },
      "required": ["genre"]
    },
    "User": {
        "description": "Користувач",
        "type": "object",
        "properties": {
          "name": {
            "description": "Ім'я користувача",
            "type": "string",
                "maxLength": 128
          },
          "photo": {
            "description": "Фото користувача",
            "type": "string",
                "maxLength": 2000
          }
        },
        "required": ["name", "photo"]
    },
    "Recomendation": {
        "description": "Рекомендації щодо покращення виконання",
        "type": "object",
        "properties": {
          "text": {
            "description": "Текст",
            "type": "string",
                "maxLength": 1024
          }
        },
        "required": ["text"]
     }
   }
}
